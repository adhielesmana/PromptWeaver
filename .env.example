# Server Configuration
NODE_ENV=production
PORT=5000

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/videogen

# Required API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
PEXELS_API_KEY=your-pexels-api-key-here

# Session Security (REQUIRED for production - generate a random 32+ char string)
SESSION_SECRET=your-very-long-random-secret-key-at-least-32-characters

# Optional: Object Storage (leave empty for local file storage)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=
PUBLIC_OBJECT_SEARCH_PATHS=
PRIVATE_OBJECT_DIR=
